{
  "manifest_version": 2,
  "name": "USD to TRY Converter",
  "description": "A sample dolar to turkish lira converter",
  "version": "1.0",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon.png",
      "38": "img/icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["img/icon.png"],
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M",
        "chromeos": "Ctrl+Shift+M",
        "linux": "Ctrl+Shift+M"
      }
    }
  }
}